<h3>Add Ride</h3>
<%= form_for @ride, url: {action: "update"} do|f| %>
<% if flash[:notice] %>
  <div class="notice">
    <%= flash[:notice]  %>
  </div>
<% end %>

<%= f.label :Start_Address %>
<%= f.text_field :Start_Address %><br/>

<%= f.label :End_Address %>
<%= f.text_field :End_Address %><br/>

<%= f.label :Time %>
<%= f.date_select :Time %><br/>

<%= f.label :seat_count %>
<%= f.select :seat_count, (@minSeats..@maxSeats).to_a %><br/>

<%= f.label :preferences %>
<%= f.text_area :preferences %><br/>

<%= f.label :price %>
<%= f.text_field :price %><br/>

<%= f.submit "Update" %>
<% end %>